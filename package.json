{
  "license": "MIT",
  "scripts": {
    "build": "rm -rf ./public/build && rm -rf ./build && rm -rf ./dist && npx webpack",
    "build:win": "del /s /q public\\build && del /s /q build && del /s /q dist && npx webpack",
    "start": "npx webpack && npx electron index.js",
    "dist:win": "npm run build:win && electron-builder -w",
    "dist:mac": "npm run build && electron-builder -m",
    "dist:linux": "npm run build && electron-builder -l"
  },
  "name": "gpk_rc",
  "version": "1.9.4",
  "description": "GPK RC",
  "homepage": "https://github.com/darakuneko",
  "author": {
    "name": "darakuneko",
    "email": "tvkids@gmail.com"
  },
  "type": "module",
  "devDependencies": {
    "electron": "30.1.0",
    "electron-builder": "24.13.3",
    "webpack-cli": "5.1.4"
  },
  "main": "./index.js",
  "dependencies": {
    "@babel/core": "7.24.7",
    "@babel/preset-env": "7.24.7",
    "@babel/preset-react": "7.24.7",
    "@emotion/babel-preset-css-prop": "11.11.0",
    "@emotion/react": "11.11.4",
    "@emotion/styled": "11.11.5",
    "@mui/icons-material": "5.15.19",
    "@mui/material": "5.15.19",
    "@paymoapp/active-window": "2.1.1",
    "babel-loader": "9.1.3",
    "dayjs": "1.11.11",
    "electron-store": "9.0.0",
    "node-hid": "3.1.0",
    "node-loader": "2.0.0",
    "path": "0.12.7",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "uuid": "9.0.1",
    "webpack": "5.91.0"
  },
  "build": {
    "productName": "GPK RC",
    "appId": "app.darakuneko.gpk_rc",
    "afterSign": "notarize.js",
    "npmRebuild": false,
    "files": [
      "public/**/*",
      "icons/*",
      "index.js",
      "preload.js",
      "qmkrcd.js",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "icons/icon-256x256.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "icons/icon-512x512.png",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "category": "public.app-category.productivity",
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "icons"
    }
  }
}
